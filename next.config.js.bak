/** @type {import('next').NextConfig} */
const nextConfig = {
  reactStrictMode: true,
  webpack: (config, { isServer }) => {
    config.resolve = config.resolve || {};
    config.resolve.alias = { ...(config.resolve.alias || {}) };

    // Server: map 'node:crypto' to 'crypto'
    config.resolve.alias['node:crypto'] = isServer ? 'crypto' : false;

    // Client: block Node core modules so accidental imports fail clearly
    if (!isServer) {
      Object.assign(config.resolve.alias, {
        crypto: false,
        fs: false,
        path: false,
        net: false,
        tls: false,
      });
    }
    return config;
  },
};
module.exports = nextConfig;

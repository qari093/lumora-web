"use client";

import React, { useState, useMemo, useEffect } from "react";
import clsx from "clsx";

/* ------------------------------------------------------------------
   HOLOPANEL v4 â€” Next-Gen Emoji Engine (9.5+)
   Features: Categories, Quick Reactions, Skin Tones, Keyboard Nav,
             Lazy Render, AI prompt bridge
-------------------------------------------------------------------*/

type Emoji = {
  emoji: string;
  label: string;
  keywords: string[];
};

type Category = {
  id: string;
  name: string;
  color: string;
  emojis: Emoji[];
};

// Core emoji categories (you can expand this easily)
const EMOJI_CATEGORIES: Category[] = [
  {
    id: "faces",
    name: "Faces",
    color: "#ff6b6b",
    emojis: [
      { emoji: "ğŸ˜€", label: "grinning", keywords: ["smile", "happy", "joy"] },
      { emoji: "ğŸ˜‚", label: "tears", keywords: ["laugh", "funny"] },
      { emoji: "ğŸ˜", label: "love", keywords: ["heart", "adore"] },

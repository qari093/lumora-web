import type { NextRequest } from "next/server";
import { NextResponse } from "next/server";

/**
 * Minimal middleware kept ONLY so unit tests can import `../../middleware`.
 * We intentionally do NOT rewrite /api/_health here because Next dev's edge adapter
 * has been crashing in this repo when evaluating Request.url parsing paths.
 *
 * /api/_health is served by a route handler that returns JSON and sets the expected
 * x-middleware-rewrite header for contract tests.
 */
export function middleware(_req: NextRequest) {
  return NextResponse.next();
}

// Exclude API routes to avoid adapter edge-path parsing issues in dev.
export const config = {
  matcher: ["/((?!api/).*)"]
};
